<?xml version="1.0" encoding="utf-8"?>
<!-- Formulario para descarga de xml.
    vbueno 1908202113:22
-->
<odoo>
    <record id="report_wizard_descarga_xml_view_form" model="ir.ui.view">
        <field name="name">report.wizard.descarga.xml.view.form</field>
        <field name="model">descarga_xml.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="fecha_inicial"/>
                        <field name="fecha_final"/>
                        <field name="facturas"/>
                        <field name="notas_credito"/>
                        <field name="pagos"/>
                    </group>
                </group>
                <footer>
                    <button name="descargaxml" type="object" string="Descargar" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_descarga_xml_wizard" model="ir.actions.act_window">
        <field name="name">Descarga XML</field>
        <field name="res_model">descarga_xml.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="report_wizard_descarga_xml_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="descarga_xml_menu"
        name="Descarga XML"
        action="action_descarga_xml_wizard"
        parent="account.menu_finance_entries"
        groups="base.group_user"
        sequence="500"/>
</odoo>