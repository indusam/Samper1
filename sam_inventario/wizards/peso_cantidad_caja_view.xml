<?xml version="1.0" encoding="utf-8"?>
<!--
    Wizard para captura de peso y cantidad por caja
    vbueno 1011202116:08
    Actualizado para Odoo v18
-->
<odoo>
    <!-- Definición de la vista del wizard para ingresar el peso y cantidad por caja -->
    <record id="wizard_peso_cantidad_caja_view_form" model="ir.ui.view">
        <field name="name">wizard.peso.cantidad.caja.view.form</field>
        <field name="model">wizard.pesocajacantidad</field>
        <field name="arch" type="xml">
            <form string="Peso y Cantidad por Caja">
                <sheet>
                    <group>
                        <group>
                            <field name="producto" options="{'no_create': True}"/>
                            <field name="cantidad"/>
                            <field name="peso"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="aplicar_peso_cantidad" type="object" string="Guardar" class="btn-primary"/>
                    <button special="cancel" string="Cancelar" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard de peso y cantidad por caja -->
    <record id="action_peso_cantidad_caja_wizard" model="ir.actions.act_window">
        <field name="name">Peso y cantidad por caja</field>
        <field name="res_model">wizard.pesocajacantidad</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_peso_cantidad_caja_view_form"/>
        <field name="target">new</field>
    </record>

    <!-- Elemento de menú para acceder al wizard desde el menú de MRP -->
    <menuitem
        id="peso_cantidad_caja_menu"
        name="Peso y cantidad por caja"
        action="action_peso_cantidad_caja_wizard"
        parent="mrp.menu_mrp_bom"
        groups="mrp.group_mrp_user"
        sequence="12"/>

</odoo>
