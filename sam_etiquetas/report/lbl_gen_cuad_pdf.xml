<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="lbl_gen_cuad_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <br/>
                    <div style="text-align:left;color:black!important;">
                        <strong>
                            <h1>
                                <span style="font-weight:bold;" t-esc="doc.product_id.x_name"/>
                            </h1>
                        </strong>
                    </div>
                    <br/>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                        <texto>Ingredientes: <t t-esc="doc.product_id.x_cod_ingredientes"/></texto>
                            <br/>
                        <texto>Lote: <t t-esc="doc.name"/></texto>
                            <br/>
                        <texto>Caducidad: <t t-esc="doc.life_date"/></texto>
                        </t>
                    </tbody>
                </div>
            </t>
        </t>
    </template>
    <!-- esto aplica cuando se imprime desde el menú "Imprimir" al seleccionar registros.-->
    <report
            id="action_lbl_gen_cuad"
            string="Etiqueta genérica cuadrada"
            model="stock.production.lot"
            report_type="qweb-pdf"
            file="sam_etiquetas.lbl_gen_cuad_template"
            name="sam_etiquetas.lbl_gen_cuad_template"
    />
</odoo>
