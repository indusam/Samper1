<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="lbl_gen_cuad_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <br/>
                    <div style="text-align:left;color:black!important;">
                        <strong>
                            <h1>
                                <span style="font-weight:bold;" t-esc="docs.product_id.x_name"/>
                            </h1>
                        </strong>
                    </div>
                    <br/>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <texto>Ingredientes: <t t-esc="doc.product_id.x_cod_ingredientes"/></texto>
                            <br/>
                            <br/>
                            <texto>Lote: <t t-esc="doc.name"/></texto>
                            <br/>
                            <texto>Caducidad: <t t-esc="doc.life_date"/></texto>
                            <br/>
                            <texto>Venta a granel, pésese en <br/>presencia del consumidor</texto>
                            <br/>
                            <br/>
                            <texto>Puede contener: <t t-esc="doc.product_id.x_leyenda_precautoria"/></texto>
                            <br/>
                            <span t-field="doc.product_id.barcode"/>
                            <xpath expr="/t[1]/div[1]/div[12]/div[4]" position="replace"/>
                            <xpath expr="/t/div/div[37]/div[1]" position="inside">
                                <span t-field="doc.product_id.barcode"/>
                            </xpath>
                            <xpath expr="/t[1]/div[1]/div[37]/div[1]/span[1]" position="attributes">
                            <attribute name="t-options-widget">"barcode"</attribute>
                            </xpath>
                            <xpath expr="/t[1]/div[1]/div[37]/div[1]/span[1]" position="attributes">
                            <attribute name="t-options-width">100</attribute>
                            </xpath>
                            <xpath expr="/t[1]/div[1]/div[37]/div[1]/span[1]" position="attributes">
                            <attribute name="t-options-height">40</attribute>
                            </xpath>
                        </t>
                    </tbody>
                </div>
            </t>
        </t>
    </template>
    <!-- esto aplica cuando se imprime desde el menú "Imprimir" al seleccionar registros.-->
    <report
            id="action_lbl_gen_cuad"
            string="Etiqueta genérica cuadrada"
            model="stock.production.lot"
            report_type="qweb-pdf"
            file="sam_etiquetas.lbl_gen_cuad_template"
            name="sam_etiquetas.lbl_gen_cuad_template"
    />
</odoo>
