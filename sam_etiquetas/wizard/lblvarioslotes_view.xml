<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_lblvarioslotes_view_form" model="ir.ui.view">
        <field name="model">wizard.lbl.varios.lotes</field>
        <field name="name">wizard.lbl.varios.lotes.view.form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="especies" required="1"/>
                        <field name="lote1" required="1"/>
                        <field name="lote2" required="0"/>
                        <field name="lote3" required="0"/>
                        <field name="lote4" required="0"/>
                        <field name="lote5" required="0"/>
<!--                        <field name="cantidad" required="1"/>-->
                    </group>
                    <!--
                    <group>
                        <field name="ing_limitante" attrs="{'invisible': [('cantidad','>',0)]}"/>
                        <field name="cant_limitante" attrs="{'invisible': [('cantidad','>',0)]}"/>
                    </group>
                    -->
                </group>
                <footer>
                    <button name="imprimelblvarioslotes" type="object" string="Imprimir" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lblvarioslotes_wizard" model="ir.actions.act_window">
        <field name="name">Etiqueta varios lotes</field>
        <field name="res_model">wizard.lbl.varios.lotes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_lblvarioslotes_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="label_menu"
        name="Etiquetas"
        action="action_lblvarioslotes_wizard"
        parent="mrp.menu_mrp_production_report"
        groups="base.group_user"
        sequence="20"/>
</odoo>