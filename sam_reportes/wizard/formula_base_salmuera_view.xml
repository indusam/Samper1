<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_formula_base_salmuera_view_form" model="ir.ui.view">
        <field name="model">wizard.formula.base.salmuera</field>
        <field name="name">wizard.formula.base.salmuera.view.form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_tmpl" required="1"/>
                        <field name="producto" required="1" attrs="{'required': [('product_tmpl', '!=', False)]}"/>
                        <field name="cantidad" required="1"/>
                        <field name="consolidado" />
                    </group>
                    <group>
                        <field name="ing_limitante" attrs="{'invisible': [('cantidad','>',0)]}"/>
                        <field name="cant_limitante" attrs="{'invisible': [('cantidad','>',0)]}" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="imprime_formula_base_salmuera" type="object" string="Imprimir" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_formula_base_salmuera_wizard" model="ir.actions.act_window">
        <field name="name">Fórmula base salmuera</field>
        <field name="res_model">wizard.formula.base.salmuera</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_formula_base_salmuera_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="formula_base_salmuera_menu"
        name="Fórmula base salmuera"
        action="action_formula_base_salmuera_wizard"
        parent="studio_customization.samper_informes_9a4c552e-6a2c-49dc-b22f-2c77d1e02fac"                           
        groups="base.group_user"
        sequence="310"/>
</odoo>
