<?xml version="1.0" encoding="utf-8"?>
<!-- Imprime formula / vbueno -->
<odoo>
    <record id="wizard_formulas_view_form" model="ir.ui.view">
        <field name="model">wizard.formulas</field>
        <field name="name">wizard.formulas.view.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="producto" required="1"/>
                            
                            <field name="partidas">
                                <attribute name="modifiers">{'invisible': ['|', ('cantidad', '>', 0), ('ing_limitante', '!=', False)]}</attribute>
                            </field>
                                                        
                            <field name="cantidad">
                                <attribute name="modifiers">{'invisible': ['|', '|', ('ing_limitante', '!=', False), ('partidas', '>', 0), ('cant_limitante', '>', 0)]}</attribute>
                            </field>

                            <field name="consolidado"/>
                        </group>

                        <group>
                            <field name="ing_limitante">
                                <attribute name="modifiers">{'invisible': ['|', ('cantidad', '>', 0), ('partidas', '>', 0)]}</attribute>
                            </field>
                            <field name="cant_limitante">
                                <attribute name="modifiers">{'invisible': ['|', ('cantidad', '>', 0), ('partidas', '>', 0)]}</attribute>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button name="imprime_formula" type="object" string="Imprimir" class="btn-primary"/>
                        <button special="cancel" string="Cancelar"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_formulas_wizard" model="ir.actions.act_window">
        <field name="name">Fórmulas</field>
        <field name="res_model">wizard.formulas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_formulas_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="formula_menu"
        name="Fórmulas"
        action="action_formulas_wizard"
        parent="studio_customization.samper_informes_9a4c552e-6a2c-49dc-b22f-2c77d1e02fac"
        groups="base.group_user"
        sequence="349"/>    

</odoo>
