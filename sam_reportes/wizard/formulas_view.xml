<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_formulas_view_form" model="ir.ui.view">
        <field name="model">wizard.formulas</field>
        <field name="name">wizard.formulas.view.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="producto" required="1"/>

                            <!-- Control de visibilidad para 'partidas' -->
                            <div t-if="not record.ing_limitante">
                                <field name="partidas"/>
                            </div>

                            <!-- Control de visibilidad para 'cantidad' -->
                            <div t-if="not record.ing_limitante">
                                <field name="cantidad"/>
                            </div>

                            <field name="consolidado"/>
                        </group>

                        <group>
                            <field name="ing_limitante"/>
                            <field name="cant_limitante"/>
                        </group>
                    </group>
                    <footer>
                        <button name="imprime_formula" type="object" string="Imprimir" class="btn-primary"/>
                        <button special="cancel" string="Cancelar"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>


