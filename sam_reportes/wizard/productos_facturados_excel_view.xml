<?xml version="1.0" encoding="utf-8"?>
<!-- Formulario para reporte de productos facturados en Excel.
    vbueno 2025-12-18
-->
<odoo>
    <record id="report_wizard_productos_facturados_excel_view_form" model="ir.ui.view">
        <field name="name">report.wizard.productos.facturados.excel.view.form</field>
        <field name="model">productos.facturados.excel.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="fecha_inicio"/>
                        <field name="fecha_fin"/>
                    </group>
                </group>
                <footer>
                    <button name="genera_excel" type="object" string="Generar Excel" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_productos_facturados_excel_wizard" model="ir.actions.act_window">
        <field name="name">Productos facturados en Excel</field>
        <field name="res_model">productos.facturados.excel.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_wizard_productos_facturados_excel_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="productos_facturados_excel_menu"
        name="Productos facturados en Excel"
        action="action_productos_facturados_excel_wizard"
        parent="account.menu_finance_receivables"
        groups="base.group_user"
        sequence="100"/>
</odoo>
