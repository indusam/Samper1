<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="certificado_calidad_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">       
                <t t-call="web.external_layout">    
                    <div class="page">
                        <br/>
                        <div style="text-align:center;color:black!important;">
                            <strong>
                                <h2>
                                    Certificado de calidad
                                </h2>
                                <br/>
                            </strong>
                        </div>
                        <strong>Certificado No. : </strong> <span t-field="o.x_name" />                     <strong>Especie / T.E.  : </strong> <span t-field="o.x_studio_especie" />
                        <strong>Fecha           : </strong> <span t-field="o.x_studio_fecha" />             <strong>Lote            : </strong> <span t-field="o.x_studio_lote" />
                        <strong>Producto        : </strong> <span t-field="o.x_studio_producto" />          <strong>Elaboración     : </strong> <span t-field="o.x_studio_elaboracion" />
                        <strong>Codigo          : </strong> <span t-field="o.x_studio_codigo" />            <strong>Caducidad       : </strong> <span t-field="o.x_studio_caducidad" />
                        <strong>Lote pieza      : </strong> <span t-field="o.x_studio_lote_pieza" />
                        <strong>Fecha Análisis  : </strong> <span t-field="o.x_studio_fecha_analisis" />
                        <br/>
                    </div>
                </t>
            </t>
        </t>                
    </template>
</odoo>
