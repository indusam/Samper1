<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Parche para corregir el error al enviar recibos de pago por correo en Odoo 18 -->
    <!-- El problema es que la acciÃ³n usa default_res_id (obsoleto) en lugar de default_res_ids -->

    <record id="account_send_payment_receipt_by_email_action_fix" model="ir.actions.act_window">
        <field name="name">Send receipt by email</field>
        <field name="res_model">mail.compose.message</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'mail_post_autofollow': True,
            'default_composition_mode': 'comment',
            'default_model': 'account.payment',
            'default_res_ids': active_ids,
            'default_template_id': ref('account.mail_template_data_payment_receipt'),
            'default_email_layout_xmlid': 'mail.mail_notification_light',
        }</field>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_view_types">form</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>

    <!-- Actualizar la referencia original para que use nuestro fix -->
    <delete model="ir.actions.act_window" id="account.account_send_payment_receipt_by_email_action"/>

    <record id="account.account_send_payment_receipt_by_email_action" model="ir.actions.act_window">
        <field name="name">Send receipt by email</field>
        <field name="res_model">mail.compose.message</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'mail_post_autofollow': True,
            'default_composition_mode': 'comment',
            'default_model': 'account.payment',
            'default_res_ids': active_ids,
            'default_template_id': ref('account.mail_template_data_payment_receipt'),
            'default_email_layout_xmlid': 'mail.mail_notification_light',
        }</field>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_view_types">form</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>
</odoo>
