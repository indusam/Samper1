<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario personalizada para stock.picking -->
    <record id="view_picking_form_inherit_sam" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.sam</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="x_exis_origen" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
