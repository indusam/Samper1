<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Vista de formulario extendida para product.template -->
    <record id="product_template_form_view_intermedios_empaques" model="ir.ui.view">
      <field name="name">product.template.form.intermedios.empaques</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='inventory']" position="after">
          <page string="Intermedios y Empaques" name="intermedios_empaques_page" groups="base.group_user">
            <group>
              <field name="int_y_emp" nolabel="1">
                <tree editable="bottom">
                  <field name="product_id" domain="[('type', 'in', ['product', 'consu'])]"/>
                  <field name="tipo"/>
                  <field name="cantidad"/>
                  <field name="unidades_por_pieza"/>
                  <field name="uom_id" readonly="1"/>
                </tree>
              </field>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>