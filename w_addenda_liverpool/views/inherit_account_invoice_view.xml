<odoo>
  <data>
    <record id="w_inherit_account_invoice_view_add_fields_for_liverpool_addendas" model="ir.ui.view">
        <field name="name">w.inherit.account.invoice.view.add.fields.for.liverpool.addendas</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <field name="use_addenda" invisible="1"/>
                <page name="addenda_liverpool" attrs="{'invisible': ['|', ('use_addenda', '=', False), ('type', '=', 'entry')]}" string="Addenda liverpool">
                    <group name="principal_group">
                        <group name="left_group">
                            <field name="purchase_order_liv"/>
                            <field name="delivery_folio"/>
                            <field name="date_delivery"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
      </record>
  </data>
</odoo>